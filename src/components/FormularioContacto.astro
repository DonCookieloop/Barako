---

<section id="contacto" class="bg-white min-h-screen flex items-center justify-center mb-32 p-4 md:p-8 md:mb-32 md:-ml-24">
  <div class="container mx-auto flex flex-col lg:flex-row items-center gap-8">
    
    <div class="container mx-auto md:ml-40 flex flex-col items-center md:items-start">
      <!-- Image Section -->
      <div class="w-52 md:w-1/2 md:ml-16 order-1">
        <img src="/Contacto.png" alt="Barako Plomeria" class="w-full h-auto object-cover rounded-lg">
      </div>

      <!-- Text Section -->
      <div class="w-full md:w-1/2 md:ml-28 order-2 text-center md:text-left -mt-6 md:-mt-8 md:mb-8">
        <h1 class="text-4xl font-bold text-slate-800 mb-4 lg:text-5xl">Contacto</h1>
        <p class="text-lg text-slate-800 mb-4 lg:text-xl">Barako Servicios</p>
        <p class="text-lg text-slate-800 mb-4 lg:text-xl">CABA, Buenos Aires, Argentina</p>
        <a href="tel:+541156552782" class="text-slate-800 hover:text-blue-800 font-medium transition-colors">
          CEL: 11 5655-2782
        </a>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="container mx-auto md:pr-32 md:-ml-32 order-3 mt-2 md:mt-0">
      <div class="max-w-2xl mx-auto">
        <form action="https://formspree.io/f/mlderolq" method="POST" class="space-y-6">
          <!-- Form fields remain unchanged -->
          <div>
            <label for="nombre" class="block text-sm font-medium text-azul-oscuro mb-1">Nombre</label>
            <input type="text" id="nombre" name="nombre" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-azul-oscuro mb-1">Email</label>
            <input type="email" id="email" name="email" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
          </div>
          <div>
            <label for="asunto" class="block text-sm font-medium text-azul-oscuro mb-1">Asunto</label>
            <input type="text" id="asunto" name="asunto" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
          </div>
          <div>
            <label for="mensaje" class="block text-sm font-medium text-azul-oscuro mb-1">Mensaje</label>
            <textarea id="mensaje" name="mensaje" rows="4" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
          </div>
          <div class="flex space-x-4 items-center">
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition duration-300">Enviar mensaje</button>
            <a href="https://wa.me/541156552782" class="bg-green-500 text-white px-6 py-2 rounded-md hover:bg-green-600 transition duration-300 flex items-center">
              <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
