---
const servicios = [
  {
    titulo: "Destapaciones de cañerías a Domicilio",
    descripcion: "Destapacion de bloqueos en cañerías - Baños - Cocinas - Inodoros - Cloacas - Patios - Terrazas - Desagues - Lavaderos - Pluviales - Rejillas - Tuberias."
  },
  {
    titulo: "Limpieza de desagües comerciales",
    descripcion: "Mantenimiento programado de desagües comerciales para evitar interrupciones en tu negocio."
  },
  {
    titulo: "Mantenimiento preventivo de sistemas de drenaje",
    descripcion: "Evita futuros problemas con nuestros servicios de mantenimiento preventivo para sistemas de drenaje."
  },
  {
    titulo: "Inspección con cámara de cañerias",
    descripcion: "Deteccion de problemas ocultos en cañerias con inspecciónes por cámara."
  },
  {
    titulo: "Destapaciones de emergencia 24/7",
    descripcion: "Disponibilidad las 24 horas para resolver destapaciones de cañerias pluviales y cloacales de emergencia a domicilio, cualquier día del año."
  },
  {
    titulo: "Destapaciones con Maquina",
    descripcion: "Destapaciones con equipos de ultima tecnologia, maquinas con motor de 1HP de Potencia."
  },
];
---

<section id="servicios" class="bg-white md:pt-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Servicio de Destapaciones</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {servicios.map(servicio => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-4">{servicio.titulo}</h3>
          <p class="text-gray-600">{servicio.descripcion}</p>
        </div>
      ))}
    </div>
  </div>
</section>
